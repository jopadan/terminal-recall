<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.jtrfp</groupId>
  <artifactId>trcl</artifactId>
  <name>Terminal Recall</name>
  <version>0.0.1-SNAPSHOT</version>
  <description>Engine remake for Terminal Velocity and Fury3</description>
  <url>http://www.jtrfp.org/</url>
  <developers>
    <developer>
      <id>cjritola</id>
      <name>Chuck Ritola</name>
      <email>cjritola@gmail.com</email>
      <roles>
        <role>developer</role>
      </roles>
      <properties>
        <picUrl>https://lh4.googleusercontent.com/-ZmHezAG1_0E/AAAAAAAAAAI/AAAAAAAAAAA/ErzgqyJ1tIY/s600-c-k/photo.jpg</picUrl>
      </properties>
    </developer>
  </developers>
  <licenses>
    <license>
      <name>GNU General Public Licence Version 3</name>
      <url>http://www.gnu.org/licenses/gpl.html</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:git@github.com:jtrfp/terminal-recall.git</connection>
    <developerConnection>scm:git:git@github.com:jtrfp/terminal-recall.git</developerConnection>
    <url>git@github.com:jtrfp/terminal-recall</url>
  </scm>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-gpg-plugin</artifactId>
        <executions>
          <execution>
            <id>sign-artifacts</id>
            <phase>verify</phase>
            <goals>
              <goal>sign</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.sonatype.plugins</groupId>
        <artifactId>nexus-staging-maven-plugin</artifactId>
        <version>1.5.1</version>
        <extensions>true</extensions>
        <configuration>
          <serverId>nexus-releases</serverId>
          <nexusUrl>https://oss.sonatype.org</nexusUrl>
          <stagingProfileId>1f138f325160b3</stagingProfileId>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.jtrfp.trcl.flow.RunMe</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.6</source>
          <target>1.6</target>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <properties>
    <maven.compiler.source>1.6</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.6</maven.compiler.target>
  </properties>
</project>

